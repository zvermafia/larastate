{
    "name": "zvermafia/larastate",
    "type": "library",
    "description": "A convenient way to access entity states, state values, and their localizations.",
    "keywords": [
        "zvermafia",
        "larastate"
    ],
    "homepage": "https://github.com/zvermafia/larastate",
    "license": "MIT",
    "authors": [
        {
            "name": "Mokhirjon Naimov",
            "email": "mohirjon@gmail.com",
            "homepage": "https://github.com/zvermafia",
            "role": "Developer"
        }
    ],
    "require": {
        "php" : "~7.2",
        "illuminate/support": "^5.6 || ^6.0 || ^7.0"
    },
    "require-dev": {
        "phpunit/phpunit" : ">=8.0",
        "squizlabs/php_codesniffer": "^3.5"
    },
    "autoload": {
        "psr-4": {
            "Zvermafia\\Larastate\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Zvermafia\\Larastate\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs --standard=psr12 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests",
        "fix-style": "phpcbf --standard=psr12 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
